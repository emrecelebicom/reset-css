{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./",
      "isolatedModules": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "noImplicitAny": false,
      "esModuleInterop": true
    },
    "include": ["./reset.scss"],
    "exclude": ["./node_modules/**/*"],
  }